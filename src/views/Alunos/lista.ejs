    <thead>
      <tr>
        <th>Nome</th><th>Email</th><th>Curso</th>
      </tr>
    </thead>
    <tbody>
      <% students.forEach(s => { %>
        <tr>
          <td><%= s.aluno %></td>
          <td><%= s.email %></td>
          <td><%= s.curso || 'NÃ£o matriculado' %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
<%- include('../partials/footer') %>

<td>
  <a href="/students/<%= s.id %>/delete" onclick="return confirm('Excluir aluno?')" class="btn btn-danger btn-sm">Excluir</a>
