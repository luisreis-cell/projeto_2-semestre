<%- include('../partials/header', { title: 'Meu Perfil' }) %>
<%- include('../partials/navbar', { user: user.nome }) %>
<div class="container">
  <h2>Dados do Usuário</h2>
  <ul>
    <li><strong>Nome:</strong> <%= user.nome %></li>
    <li><strong>Email:</strong> <%= user.email %></li>
    <li><strong>Tipo:</strong> <%= user.tipo %></li>
  </ul>
</div>
<%- include('../partials/footer') %>

<td>
  <a href="/users/<%= u.id %>/delete" onclick="return confirm('Excluir usuário?')" class="btn btn-danger btn-sm">Excluir</a>
</td>
<%- include('../partials/header', { title: 'Editar Perfil' }) %>
<%- include('../partials/navbar', { user: user.nome }) %>
<div class="container">
  <h2>Editar Perfil</h2>
  <form action="/users/update" method="POST">
    <input type="hidden" name="id" value="<%= user.id %>"/>
    <div class="form-group">
      <label for="name">Nome:</label>
      <input type="text" name="name" value="<%= user.nome %>"/>
    </div>
    <div class="form-group">
      <label for="email">Email:</label>
      <input type="email" name="email" value="<%= user.email %>"/>
    </div>
    <div class="form-group">
      <label for="tipo">Tipo:</label>
      <select name="tipo">
        <option value="admin" <%= user.tipo === 'admin' ? 'selected' : '' %>>Admin</option>
        <option value="instrutor" <%= user.tipo === 'instrutor' ? 'selected' : '' %>>Instrutor</option>
        <option value="aluno" <%= user.tipo === 'aluno' ? 'selected' : '' %>>Aluno</option>
      </select>
    </div>
    <button type="submit">Salvar</button>
  </form>
</div>
<%- include('../partials/footer') %>