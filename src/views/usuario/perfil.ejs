<%- include('../partials/header') %>

<main class="container py-5">
    <h2>Meu Perfil</h2>
    <p class="lead">Visualize suas informações de usuário</p>

    <div class="card shadow-sm mt-4">
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-sm-3"><strong>Nome:</strong></div>
                <div class="col-sm-9"><%= usuario.nome %></div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-3"><strong>Email:</strong></div>
                <div class="col-sm-9"><%= usuario.email %></div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-3"><strong>Papel:</strong></div>
                <div class="col-sm-9"><span class="badge bg-secondary"><%= usuario.papel %></span></div>
            </div>
            <% if (usuario.criado_em) { %>
            <div class="row">
                <div class="col-sm-3"><strong>Data de Criação:</strong></div>
                <div class="col-sm-9"><%= new Date(usuario.criado_em).toLocaleDateString('pt-BR') %></div>
            </div>
            <% } %>
        </div>
    </div>

    <div class="mt-3">
        <a href="/painel" class="btn btn-secondary">Voltar ao Painel</a>
    </div>
</main>

<%- include('../partials/footer') %>

