<%- include('partials/header') %>

<main class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="card-title mb-4">Criar conta</h3>
                    <form method="POST" action="/usuario/cadastro">
                        <% if (messages && messages.error && messages.error.length) { %>
                            <% messages.error.forEach(m => { %>
                                <div class="alert alert-danger"><%= m %></div>
                            <% }) %>
                        <% } %>
                        <div class="mb-3">
                            <input class="form-control" name="nome" placeholder="Nome" required />
                        </div>
                        <div class="mb-3">
                            <input class="form-control" name="email" type="email" placeholder="E-mail" required />
                        </div>
                        <div class="mb-3">
                            <input class="form-control" name="senha" type="password" placeholder="Senha" required />
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="/usuario/login">JÃ¡ tenho conta</a>
                            <button class="btn btn-primary" type="submit">Cadastrar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('partials/footer') %>
