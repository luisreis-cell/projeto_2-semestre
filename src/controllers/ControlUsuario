const User = require('../models/user');

module.exports = {
  async profile(req, res) {
    const user = await User.findById(req.session.userId);
    res.render('users/profile', { user });
  }
};
const User = require('../models/user');

module.exports = {
  async remove(req, res) {
    await User.remove(req.params.id);
    res.redirect('/users');
  }
};